@model IEnumerable<SportsEventsGenNHibernate.EN.SportsEvents.EventoEN>
@{
    ViewBag.Title = "BusquedaAvanzada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <br /><br /><br /><br />
        <h2 style="color:limegreen;">Busqueda avanzada</h2>
        <div class="jumbotron" style="text-align:center; height:50%;background-color:white;">


            <div class="form-group">

                <div class="row">
                    <div class="col-md-10 col-lg-10 col-xs-12">
                        <input class="form-control input-lg" id="inputlg" type="search" placeholder="Encuentra eventos cercanos...">
                    </div>
                    <script src="~/Scripts/ev.js"></script>
                    <div id="gol" class="col-md-2 col-lg-2 col-xs-12">
                        <a onclick="myFunction()" class="btn btn-success btn-lg">
                            <span class="glyphicon glyphicon-search"></span> Buscar
                        </a>
                    </div>
                </div>
                <br />
                <div class="row" style="text-align:left;">
                    <div class="col-md-2 col-lg-2 col-xs-12">
                        <div class="dropdown">
                            @Html.DropDownList("Categorias", new SelectList(@ViewBag.Categorias), new { @id = "categoria" , @class = "btn-lg btn-default dropdown-toggle" })
                        </div>
                    </div>
                    <div class="col-md-3 col-lg-3 col-xs-12">
                        <div>
                            <input class="form-control input-lg" id="inputloc" type="search" placeholder="Localizacion">
                        </div>
                    </div>
                    <div class="col-md-7 col-lg-7 col-xs-12">
                        <div class="col-md-2 col-lg-2 col-xs-12">
                            <p>Fecha</p>
                        </div>
                            <div class="col-md-2 col-lg-5 col-xs-12">
                                <input class="form-control input-lg" id="inputdesde" type="date" placeholder="Desde"> - 
                            </div>
                                <div class="col-md-2 col-lg-5 col-xs-12">
                                    <input class="form-control input-lg" id="inputhasta" type="date" placeholder="Hasta">
                                </div>
                                </div>

                </div>
                
            </div>
           
        </div>
        }








     
            
            <div class="container">

                <hr />
                <h2 style="color:limegreen;">Resultados: </h2> <br />


                @foreach (var item in Model)
                {

                    <div class="row">
                        <div class="col-xs-12 col-md-12 col-lg-12">
                            <h3>@Html.ActionLink(@item.Nombre, "../Evento/Details", new { id = @item.Id })</h3>


                        </div>
                    </div>

    <div class="row">
        <div class="col-xs-4 col-md-2 col-lg-2">
            @if (@item.Categoria.Nombre == "Futbol")
            {

                <img src="~/Images/Futbol.jpg" class="img-thumbnail" alt="Cinque Terre" width="96" height="96">
            }
            else if (@item.Categoria.Nombre == "Baloncesto")
            {
                <img src="~/Images/Baloncesto.jpg" class="img-thumbnail" alt="Cinque Terre" width="96" height="96">
            }
            else if (@item.Categoria.Nombre == "Tenis")
            {
                <img src="~/Images/Tenis.jpg" class="img-thumbnail" alt="Cinque Terre" width="96" height="96">
            }
            else if (@item.Categoria.Nombre == "Padel")
            {
                <img src="~/Images/Padel.jpg" class="img-thumbnail" alt="Cinque Terre" width="96" height="96">
            }
            else if (@item.Categoria.Nombre == "Atletismo")
            {
                <img src="~/Images/Atletismo.jpg" class="img-thumbnail" alt="Cinque Terre" width="96" height="96">
            }


        </div>
        <div class="col-xs-12 col-md-8 col-lg-8">
            <div class="row">
                <div class="col-xs-12 col-md-8 col-lg-8">
                    @item.Descripcion

                </div>


                <div class="col-xs-12 col-md-12 col-lg-12">

                    <br />
                    <div class="btn-group">
                        <a href="@Url.Action("Details", "Evento", new { id = @item.Id })" class="btn btn-warning">
                            Ir a evento
                            <span class="glyphicon glyphicon" aria-hidden="true"></span>
                        </a>
                        <a href="#" class="btn btn-primary btn-success">
                            <span class="glyphicon glyphicon-plus"></span> Apuntarse
                        </a>
                        <a href="#" class="btn  btn-default">
                            <span class="glyphicon glyphicon-share-alt"></span> Compartir
                        </a>
                    </div>

                </div>


            </div>


        </div>



    </div>


                    
                }


         </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


