@model SportsEvents_FrontEnd.Models.EventoModelo

@{
    ViewBag.Title = "Edit";
}



@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <div class="container">
        <h2 style="color:limegreen;">Evento - Editar evento</h2>
        <p>
            Introduce la siguiente información para poder editar tu evento. Tu evento sera revisado por nuestro equipo,
            podria ser eliminado en caso de no cumplir con la normativa de la pagina web. Para cualquier consulta:
            <a href="mailto:info@SportsEvents.com">info@SportsEvents.com</a>
        </p>
        <br />

        <div class="row">
            <div class="col-md-4 col-lg-4 col-xs-12" style="text-align:right; font-size:large;">
                @Html.LabelFor(model => model.Nombre)
            </div>
            <div class="col-md-8 col-lg-8 col-xs-12">
                @Html.EditorFor(model => model.Nombre)
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>
        </div><br />


        <div class="row">
            <div class="col-md-4 col-lg-4 col-xs-12" style="text-align:right; font-size:large;">
                @Html.Label("tipo", "¿De que tipo de evento se trata?")
            </div>
            <div class="col-md-8 col-lg-8 col-xs-12">
                <div class="col-md-4 col-lg-4 col-xs-12" style="font-size:large;">
                    Evento   @Html.RadioButton("tipo", 1)
                </div>
                <div class="col-md-4 col-lg-4 col-xs-12" style="font-size:large;">
                    Torneo @Html.RadioButton("tipo", 2)
                </div>
            </div>
        </div><br />

        <div class="row">
            <div class="col-md-4 col-lg-4 col-xs-12" style="text-align:right; font-size:large;">
                @Html.LabelFor(model => model.Descripcion)
            </div>
            <div class="col-md-8 col-lg-8 col-xs-12">
                @Html.EditorFor(model => model.Descripcion)
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>
        </div><br />

        <div class="row">
            <div class="col-md-4 col-lg-4 col-xs-12" style="text-align:right; font-size:large;">
                @Html.Label("Categoria", "¿De que categoria es el evento?")
            </div>
            <div class="col-md-8 col-lg-8 col-xs-12">
                @Html.DropDownListFor(model => model.Categoria, new SelectList(@ViewBag.Categorias))
                @Html.ActionLink("Crear nueva categoria...", "../Categoria/Create")
            </div>
        </div><br />

        <div class="row">
            <div class="col-md-4 col-lg-4 col-xs-12" style="text-align:right; font-size:large;">
                @Html.LabelFor(model => model.Localizacion)
            </div>
            <div class="col-md-8 col-lg-8 col-xs-12">
                @Html.EditorFor(model => model.Localizacion)
                @Html.ValidationMessageFor(model => model.Localizacion)
            </div>
        </div><br />

        <div class="row">
            <div class="col-md-4 col-lg-4 col-xs-12" style="text-align:right; font-size:large;">
                @Html.Label("Fecha", "¿Cuando se realizara el evento?")
            </div>
            <div class="col-md-8 col-lg-8 col-xs-12">
                @Html.TextBoxFor(model => model.Fecha, new { type = "date" })
                @Html.ValidationMessageFor(model => model.Fecha)
            </div>
        </div><br />

        <div class="row">
            <div class="col-md-12 col-lg-12 col-xs-12" style="text-align:left; font-size:large;">
                @Html.Label("Latitud", "Introduzca estos datos si los conoce")
            </div>

        </div>

        <div class="row">
            <div class="col-md-4 col-lg-4 col-xs-12" style="text-align:right; font-size:large;">
                Latitud
            </div>
            <div class="col-md-8 col-lg-8 col-xs-12">
                @Html.EditorFor(model => model.Latitud)
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 col-lg-4 col-xs-12" style="text-align:right; font-size:large;">
                Longitud
            </div>
            <div class="col-md-8 col-lg-8 col-xs-12">
                @Html.EditorFor(model => model.Longitud)
            </div>
        </div><br />

        <div class="row">
            <div class="col-md-4 col-lg-4 col-xs-12" style="text-align:right; font-size:large;">
                @Html.Label("numPartMax", "¿Numero maximo de particpantes del evento?")
            </div>
            <div class="col-md-8 col-lg-8 col-xs-12">
                @Html.EditorFor(model => model.numPartMax)
                @Html.ValidationMessageFor(model => model.numPartMax)
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-lg-12 col-xs-12" style="text-align:center; font-size:large;">
                <input type="submit" class="btn btn-success" value="Editar">
            </div>

        </div>

    </div>






   
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
