@model IEnumerable<SportsEventsGenNHibernate.EN.SportsEvents.GaleriaEN>

@{
    ViewBag.Title = "Index";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-3" style="color:limegreen;"><h2>Galeria</h2></div>

    </div>
    
    <div class="row">

        <div class="col-md-2"><button type="button" class="btn btn-default">@Html.ActionLink("Create New", "Create")</button></div>
    </div>
    <br />

    <div class=" row">

@foreach (var item in Model)
        {
        <div class="col-md-4 col-lg-4 col-xs-12">
            <div class="row">
                Foto
            </div>
            <div class="row">
                @Html.ActionLink( item.NombreGaleria, "Details", new { id = item.Id })
                @Html.DisplayFor(modelItem => item.NombreGaleria)
            </div>
            <div class="row">
                @Html.DisplayFor(modelItem => item.Evento.Id)
            </div>
        </div>}
        
    </div>




    
</div>