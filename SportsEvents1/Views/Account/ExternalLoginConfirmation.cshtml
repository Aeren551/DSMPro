@model MvcApplication1.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = "Registrarse";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Asociar su cuenta de @ViewBag.ProviderDisplayName.</h2>
</hgroup>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Formulario de asociación</legend>
        <h1 class="cabecera-registro">Formulario de registro</h1>


        <div class="eventos1">
            <div class="display-label">
                @Html.LabelFor(m => m.correo)
            </div>
            <div class="display-input">
                @Html.TextBoxFor(m => m.correo)
            </div>
            <div class="display-label">
                @Html.LabelFor(m => m.Nombre)
            </div>
            <div class="display-input">
                @Html.TextBoxFor(m => m.Nombre)
            </div>
            <div class="display-label">
                @Html.LabelFor(m => m.Apellidos)
            </div>
            <div class="display-input">
                @Html.TextBoxFor(m => m.Apellidos)
            </div>
            <div class="display-label">
                @Html.LabelFor(m => m.Direccion)
            </div>
            <div class="display-input">
                @Html.TextBoxFor(m => m.Direccion)
            </div>

            <div class="display-label">
                @Html.LabelFor(m => m.Telefono)
            </div>
            <div class="display-input">
                @Html.TextBoxFor(m => m.Telefono)
            </div>
            <div class="display-label">
                @Html.LabelFor(m => m.Localidad)
            </div>
            <div class="display-input">
                @Html.TextBoxFor(m => m.Localidad)
            </div>

            <div class="display-label">
                @Html.LabelFor(m => m.Provincia)
            </div>
            <div class="display-input">
                @Html.TextBoxFor(m => m.Provincia)
            </div>
            <div class="display-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="display-input">
                @Html.PasswordFor(m => m.Password)
            </div>
            <div class="display-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="display-input">
                @Html.PasswordFor(m => m.ConfirmPassword)
            </div>
            @Html.HiddenFor(m => m.ExternalLoginData)
            <input type="submit" class="boton-registrarse" value="Registrarse" />

        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}